@model BookDetailViewModel
@{
    ViewData["Title"] = @Model.Book.Name;
}

<div class="row">
    <div class="col-3">
        <img src=@Model.Author.Picture alt="@Model.Author.Name" class="w-100" />
        
    </div>
    <div class="col-6">
        <div class="row">
            <div class="col-6">
                <h1>@Model.Book.Name</h1>
                <a asp-controller="Home" asp-action="AuthorDetail" asp-route-authorId="@Model.Author.Id">@Model.Author.Name @Model.Author.Surname</a>
                @if (Model.Book.ShortExcerpt != null)
                {
                    <p>@Model.Book.ShortExcerpt</p>
                }
                @if (Model.Book.Description != null)
                {
                    <h4>Kitap Özet</h4>
                    <p>@Model.Book.Description</p>
                }
            </div>
            <div class="col-6">

            </div>            
        </div>
    </div>
    <div class="col-3">
        <div class="bg-secondary bg-opacity-10">
            <div class="row text-center">
                <h2>@Model.Book.Name</h2>
            </div>
            <div class="row text-center">
                <h2>@Model.Book.Price</h2>
                <a class="btn btn-success w-50 m-auto" asp-controller="Shop" asp-action="AddToCart" asp-route-bookId="@Model.Book.Id">Sepete Ekle</a>                
            </div>
        </div>
    </div>
</div>